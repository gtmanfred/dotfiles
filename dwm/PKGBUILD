# Contributor: Grigorios Bouzakis <grbzks@gmail.com>

pkgname=dwm
pkgver=6.0
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
depends=('libx11' 'libxinerama')
install=$pkgname.install
source=(http://dl.suckless.org/dwm/dwm-$pkgver.tar.gz
	config.h
	myconfigh.diff
	dwm.desktop
	dwm-6.0-cycle.diff
	http://dwm.suckless.org/patches/dwm-6.0-push.diff
	http://dwm.suckless.org/patches/dwm-6.0-bstack.diff
	http://dwm.suckless.org/patches/dwm-6.0-pertag.diff
	http://dwm.suckless.org/patches/dwm-6.0-zoomswap.diff
	http://dwm.suckless.org/patches/dwm-r1508-focusonclick.diff
	http://dwm.suckless.org/patches/dwm-5.9-warp.diff)
build() {
  cd $srcdir/$pkgname-$pkgver
  cp $srcdir/config.h config.h
  sed -i 's/CPPFLAGS =/CPPFLAGS +=/g' config.mk
  sed -i 's/^CFLAGS = -g/#CFLAGS += -g/g' config.mk
  sed -i 's/^#CFLAGS = -std/CFLAGS += -std/g' config.mk
  sed -i 's/^LDFLAGS = -g/#LDFLAGS += -g/g' config.mk
  sed -i 's/^#LDFLAGS = -s/LDFLAGS += -s/g' config.mk
  patch -p1 -i $srcdir/dwm-6.0-cycle.diff
  patch -p1 -i $srcdir/myconfigh.diff
  patch -p1 -i $srcdir/dwm-6.0-pertag.diff
  patch -p1 -i $srcdir/dwm-6.0-push.diff
  patch -p1 -i $srcdir/dwm-6.0-bstack.diff
  patch -p1 -i $srcdir/dwm-6.0-zoomswap.diff
  patch -p1 -i $srcdir/dwm-5.9-warp.diff
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr DESTDIR=$pkgdir install
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
  install -m644 -D README $pkgdir/usr/share/doc/$pkgname/README
  install -m644 -D $srcdir/$pkgname.desktop $pkgdir/usr/share/xsessions/$pkgname.desktop
  cp $srcdir/$pkgname-$pkgver/config.h $srcdir/../
  cp $srcdir/$pkgname-$pkgver/dwm.c $srcdir/../
 }
