[general]
metadata = ~/.offlineimap
pythonfile = ~/.config/offlineimap/offlineimap.py
accounts = gtmanfred, gmail
maxsyncaccounts = 2
socktimeout = 60
ui = quiet

[mbnames]
enabled = yes
filename = ~/.mutt/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account gtmanfred]
quick = 10
autorefresh = 3
postsynchook = notmuch new
localrepository = local-gtmanfred
remoterepository = remote-gtmanfred
status_backend=sqlite
maxconnections = 5

[Account gmail]
quick = 10
autorefresh = 3
postsynchook = notmuch new
localrepository = local-gmail
remoterepository = remote-gmail
status_backend=plain
maxconnections = 5

[Repository local-gmail]
type = Maildir
localfolders = /home/daniel/mail/gmail


[Repository remote-gmail]
type = Gmail
remotehost = imap.gmail.com
remoteuser = daniel.wallace12@gmail.com
remotepasseval = get_pass(".gnupg/gmail.gpg")
ssl = yes
keepalive = 60
realdelete = no
